<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llFirstPlayer"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/player_background_selected"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvPlayerOneName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="You"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/ivPlayerOneSign"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_x" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSecondPlayer"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/player_background_selected"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvPlayerTwoName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="Opponent"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/ivPlayerTwoSign"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_o" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvRoomID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="RoomID : 123456789"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="@font/inter_bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/llGameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:weightSum="3"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llFirstPoleGame"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/ivGame1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:src="@drawable/ic_null"
                    android:background="@drawable/pole_background"
                    tools:ignore="NestedWeights"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/ivGame2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_null"
                    android:background="@drawable/pole_background"
                    tools:ignore="NestedWeights"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/ivGame3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_null"
                    android:background="@drawable/pole_background"
                    tools:ignore="NestedWeights"
                    android:layout_margin="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSecondPoleGame"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/ivGame4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_null"
                    android:background="@drawable/pole_background"
                    tools:ignore="NestedWeights"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/ivGame5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_null"
                    android:background="@drawable/pole_background"
                    tools:ignore="NestedWeights"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/ivGame6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:src="@drawable/ic_null"
                    android:background="@drawable/pole_background"
                    tools:ignore="NestedWeights"
                    android:layout_margin="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llThirdPoleGame"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/ivGame7"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_null"
                    android:background="@drawable/pole_background"
                    tools:ignore="NestedWeights"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/ivGame8"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_null"
                    android:background="@drawable/pole_background"
                    tools:ignore="NestedWeights"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/ivGame9"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_null"
                    android:background="@drawable/pole_background"
                    tools:ignore="NestedWeights"
                    android:layout_margin="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>